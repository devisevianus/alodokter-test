<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGhostWhite">

    <!-- Label Home -->
    <TextView
        android:id="@+id/tv_label_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp24"
        android:paddingEnd="@dimen/dp24"
        android:paddingTop="@dimen/dp12"
        android:text="@string/label_list_of_cat"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/label_list_of_cat"
        />

    <!-- RecyclerView Cat List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp12"
        android:paddingStart="@dimen/dp12"
        android:paddingEnd="@dimen/dp12"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/tv_label_list"
        />

</androidx.constraintlayout.widget.ConstraintLayout>